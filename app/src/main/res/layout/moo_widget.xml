<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Moo.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:padding="0dp"
    android:theme="@style/Theme.Moo.AppWidgetContainer">

    <ImageView
        android:id="@+id/widget_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:src="@drawable/bottom_nav_gradient"
        android:tint="@color/light_brown" />

    <ImageView
        android:id="@+id/widget_cowspot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-70dp"
        android:rotation="90"
        android:src="@drawable/bg_spot_left"
        android:tint="@color/brown" />

    <ImageView
        android:id="@+id/widget_logo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/ic_moo_full"
        android:tint="@color/white" />

    <LinearLayout
        android:id="@+id/linearContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_logo"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/wbtnHappy"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/white_translucent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_happy"
            android:tint="@color/ic_green" />

        <ImageButton
            android:id="@+id/wbtnNeutral"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/white_translucent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_neutral"
            android:tint="@color/ic_yellow" />

        <ImageButton
            android:id="@+id/wbtnSad"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/white_translucent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_unhappy"
            android:tint="@color/ic_red" />

    </LinearLayout>


</RelativeLayout>