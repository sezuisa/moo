<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="primaryColor" format="reference|color"/>
    <attr name="primaryVariantColor" format="reference|color"/>
    <attr name="secondaryColor" format="reference|color"/>
    <attr name="secondaryVariantColor" format="reference|color"/>

    <!-- Base application theme. -->
    <style name="Theme.Moo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryVariant">@color/dark_brown</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_brown</item>
        <item name="colorSecondaryVariant">@color/light_brown</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="brownTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">?attr/primaryColor</item>
        <item name="colorPrimaryVariant">?attr/primaryVariantColor</item>
        <item name="colorSecondary">?attr/secondaryColor</item>
        <item name="colorSecondaryVariant">?attr/secondaryVariantColor</item>

        <item name="primaryColor">@color/brown</item>
        <item name="primaryVariantColor">@color/dark_brown</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->

        <item name="secondaryColor">@color/light_brown</item>
        <item name="secondaryVariantColor">@color/light_brown</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/primaryColor</item>
    </style>

    <style name="bwTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">?attr/primaryColor</item>
        <item name="colorPrimaryVariant">?attr/primaryVariantColor</item>
        <item name="colorSecondary">?attr/secondaryColor</item>
        <item name="colorSecondaryVariant">?attr/secondaryVariantColor</item>

        <item name="primaryColor">@color/black</item>
        <item name="primaryVariantColor">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="secondaryColor">@color/white</item>
        <item name="secondaryVariantColor">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/primaryColor</item>
    </style>

    <style name="milkaTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">?attr/primaryColor</item>
        <item name="colorPrimaryVariant">?attr/primaryVariantColor</item>
        <item name="colorSecondary">?attr/secondaryColor</item>
        <item name="colorSecondaryVariant">?attr/secondaryVariantColor</item>

        <item name="primaryColor">@color/milka_main</item>
        <item name="primaryVariantColor">@color/milka_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="secondaryColor">@color/milka_secondary</item>
        <item name="secondaryVariantColor">@color/milka_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/primaryColor</item>
    </style>



    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.Moo.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.Moo.AppWidgetContainer" parent="Theme.Moo.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>